<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="116dp">




    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center">


        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_maths"
            android:id="@+id/bouton_maths"
            android:visibility="visible"
            />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_culture"
            android:visibility="visible"
            android:id="@+id/bouton_culture"
            android:layout_alignParentRight="true"
            />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_histoire"
            android:visibility="visible"
            android:id="@+id/bouton_histoire"
            android:layout_alignParentBottom="true"
            />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_resultat"
            android:visibility="visible"
            android:id="@+id/bouton_resultat"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>





</LinearLayout>